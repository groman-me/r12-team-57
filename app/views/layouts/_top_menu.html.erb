<ul class="nav nav-pills pull-right">
  <% if user_signed_in? %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        Account <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to 'Create a new deck', new_user_deck_url(current_user) %></li>
        <li><%= link_to 'All your decks', user_decks_url(current_user) %></li>
        <li>
          <%= button_to 'Sign out', signout_url, method: :delete,
              class: 'btn btn-link' %>
        </li>
      </ul>
    </li>
    <li><%= image_tag current_user.profile_image_url, class: 'img-rounded' %></li>
  <% else %>
    <li><%= link_to 'Log in', '/auth/twitter' %></li>
  <% end %>
