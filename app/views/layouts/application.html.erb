<!DOCTYPE html>
<html>
<head>
  <title>
    <%= content_for?(:title) ? yield(:title) : 'Unmute your slides!' %>
    ~ Speaker Voice
  </title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-35582021-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
</head>
<body>
  <div class="page">
    <header class="header">
      <%= content_for?(:header) ? yield(:header) : render('layouts/header') %>
    </header>
    <div class="body">
      <div class="container">
        <%= yield %>
      </div>
    </div>
    <footer class="footer">
      <%= render('layouts/footer') %>
    </footer>
  </div>
  <%= javascript_include_tag "application" %>
  <%= yield(:javascript) %>
  <script src="http://s0.railsrumble.com/banner.js" type="text/javascript"></script>
</body>
</html>
